using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class PlayerController : MonoBehaviour
{
    //Called before the first frame update
    void Start()
    {
    
    }
    
    //Variable for the speed of the vehicle
    public float carSpeed = 20;
    //Varbiable that's going to let us turn the vehicle side to side
    public float turnSpeed;
    public float horizontalInput;
    //Variable that is going to let the user take control of forward movement
    public float forwardInput;
    
    //Called once per frame
    void Update()
    {
     
      //Enable user input
      horizontalInput = Input.GetAxis("Horizontal");
      forwardInput = Input.GetAxis("Vertical");
      
      //Move vehicle forward along z axis at a constant speed
      transform.Translate(Vector3.forward * Time.deltaTime * carSpeed * forwardInput);
      //This will be updated at a later date to allow rotation rather than sliding.
      transform.Translate(Vector3.right * Time.deltaTime * turnSpeed * horizontalInput);
    }
    
    
}
